// Find LinkedIn post/comment areas and inject button
function injectSoulmarkButton() {
  console.log('[Soulmark LinkedIn] Starting injection...');
  
  // Initial scan
  scanForPostAreas();
  
  // Look for new post areas
  const observer = new MutationObserver((mutations) => {
