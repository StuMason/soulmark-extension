/* CSS Variables for theming */
:root {
  --bg-primary: #FFFEF7;
  --bg-secondary: #FFF8F0;
  --bg-tertiary: #FFEDE0;
  --text-primary: #2C1810;
  --text-secondary: #5A3A2A;
